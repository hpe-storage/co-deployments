            "target": "dcs_k8s-local/${JOB_NAME}/${BUILD_NUMBER}/csi-info-metrics/yaml/"
        },
        {
            "pattern": "build/csi-info-metrics/helm/*.yaml",
            "props": "buildno=${buildno};job_name=${JOB_NAME};jobno=${BUILD_NUMBER}",
            "target": "dcs_k8s-local/${JOB_NAME}/${BUILD_NUMBER}/csi-info-metrics/helm/"
        }
    ]
