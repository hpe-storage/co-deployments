        {
            "pattern": "build/array-exporter/yaml/*.yaml",
            "props": "buildno=${buildno};job_name=${JOB_NAME};jobno=${BUILD_NUMBER}",
            "target": "dcs_k8s-local/${JOB_NAME}/${BUILD_NUMBER}/array-exporter/yaml/"
        },
        {
            "pattern": "build/array-exporter/helm/*.yaml",
